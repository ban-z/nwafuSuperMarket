<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_list_item"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <TextView
            android:id="@+id/tv_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_horizontal"
            android:textSize="@dimen/titlebar_title_textSize"
            android:layout_toRightOf="@+id/img_list_item"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/tv_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_horizontal"
            android:layout_below="@id/tv_list_item_title"
            android:layout_toRightOf="@id/img_list_item"
            android:singleLine="true"
            tools:text="@tools:sample/lorem/random" />

    </RelativeLayout>
</layout>