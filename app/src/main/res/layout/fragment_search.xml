<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.other.SearchFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_go_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/goback"/>

            <EditText
                android:id="@+id/et_search_good"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:hint="请搜索..."
                android:maxLines="2"
                android:background="@drawable/titlebar_tv_serach" />

            <Button
                android:id="@+id/btn_search_good"
                style="@android:style/Widget.Button.Toggle"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="0dp"
                android:background="@drawable/search_btn"
                android:text="搜索" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/search_recommand">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                </TableRow>

                <TableRow android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐.."
                        android:layout_margin="5dp"
                        android:background="@drawable/serarchrecommanditem"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sv_sreach_recommand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:menu="@menu/searchrecommandmenu"
            android:background="@drawable/search_recommand"/>

    </LinearLayout>
</layout>